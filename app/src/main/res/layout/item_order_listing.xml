<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_order_listing_cardView"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_order_listing_image"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:gravity="center"
                tools:src="@drawable/goodorder"
                android:layout_gravity="right" />
            <LinearLayout
                android:id="@+id/order_detail_detail_quantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="6"
                android:textSize="16sp"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/item_order_listing_id"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"
                    tools:text="Orden #123123"/>

                <TextView
                    android:id="@+id/item_order_listing_state"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    tools:text="Estado: Pendiente"/>

                <TextView
                    android:id="@+id/item_order_listing_date_created"

                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Fecha de Creacion: 20/10/2020"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/item_order_listing_view_order"
                android:layout_gravity="center|right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>